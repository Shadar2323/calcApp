<resources>
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
	</style>


	<!-- CalculatorButton Style -->
	<style name="CalculatorButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/rounded_button</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">4dp</item>
	</style>

	<!-- CalculatorClearButton Style -->
	<style name="CalculatorClearButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/rounded_clear_button</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">4dp</item>
	</style>


	<!-- Style for operator buttons -->
	<style name="OperatorButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:background">@drawable/operator_button_background</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">4dp</item>
	</style>
</resources>
